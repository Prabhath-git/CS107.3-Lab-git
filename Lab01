1).
using System;

public class Program
{
    static void Main(string[] args)
    {
       
        string name = Console.ReadLine("Enter your name: ");
        string batch = Console.ReadLine("Enter your batch: ");

        
        Console.WriteLine("Your name is {0}, and your batch is {1}.", name, batch);

    
        float radius = float.Parse(Console.ReadLine("Enter the radius of the circle: "));

        
        float area = Math.PI * radius * radius;

        
        Console.WriteLine("The area of the circle is {0}.", area);

        
        int num1 = int.Parse(Console.ReadLine("Enter the first number: "));
        int num2 = int.Parse(Console.ReadLine("Enter the second number: "));

        
        int sum = num1 + num2;

        
        Console.WriteLine("The sum of the two numbers is {0}.", sum);

        
        float salary = float.Parse(Console.ReadLine("Enter the salary of the employee: "));
        float taxRate = float.Parse(Console.ReadLine("Enter the tax rate: "));

        
        float tax = salary * taxRate;

        
        float afterTaxSalary = salary - tax;

      
        Console.WriteLine("The salary after tax is {0}.", afterTaxSalary);
    }
}

2).
using System;

namespace AreaOfCircle
{
    class Program
    {
        static void Main(string[] args)
        {
           
            double radius;
            double area;

           
            Console.WriteLine("Enter the radius of the circle: ");
            radius = Convert.ToDouble(Console.ReadLine());

       
            area = Math.PI * radius * radius;
            Console.WriteLine("The area of the circle is: {0:0.00}", area);
        }
    }
}

3).
using System;

public class SumOfTwoNumbers
{
    public static void Main(string[] args)
    {
        int number1=        Convert.ToInt32(Console.ReadLine());
        int number2 = Convert.ToInt32(Console.ReadLine());

        int sum = number1 + number2;

        Console.WriteLine("The sum of the two numbers is {0}", sum);
    }
}

4).
using System;

public class SalaryAfterTax
{
    public static void Main(string[] args)
    {   
        int salary = Convert.ToInt32(Console.ReadLine());    

        float taxRate = float.Parse(Console.ReadLine());

        float salaryAfterTax = salary - (salary * taxRate);

        Console.WriteLine("The salary after the tax is {0}", salaryAfterTax);
    }
}
